<div class="container">
    <div class="row justify-content-center">
        <div class="card col-sm-6" style="margin: 100px;">
            <div class="card-header">
                    Giriş Paneli
            </div>
                <div class="card-body">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for>Email:</label>
                            <input type="text" class="form-control" name="username" placeholder="ornek543@ornek.com">
                        </div>
                        <div class="form-group">
                            <label>Şifre:</label>
                            <input type="password" class="form-control" name="password" placeholder="Şifre">
                        </div>
                     <button type="submit" class="btn btn-primary col-sm" >Giriş Yap</button>
                    </form>
                </div>
                   
        
                 <div class="card-footer ">
                 </div>

                 <% if(typeof username!='undefined') {%>
                <h2 style="font-size: small;"><%= username%></h2>
                <%}%>

                <% if(typeof password!='undefined') {%>
                <h2 style="font-size: small;"><%= password%></h2>
                <%}%>


        </div>
    </div>
</div>

